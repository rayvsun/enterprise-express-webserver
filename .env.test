# 测试环境配置
NODE_ENV=test
PORT=3001
API_PREFIX=/api/v1
LOG_LEVEL=info
ENABLE_SWAGGER=true

# JWT配置
JWT_SECRET=test_jwt_secret_key_for_testing
JWT_EXPIRES_IN=1h

# MySQL配置 - 测试环境使用独立测试数据库
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=webserver_test
MYSQL_POOL_MIN=2
MYSQL_POOL_MAX=10

# Redis配置 - 测试环境
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_PREFIX=webserver_test:

# 安全配置 - 测试环境
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# 集群配置 - 测试环境可选择性启用
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0

# 文件上传配置
UPLOAD_MAX_SIZE=20
UPLOAD_PATH=uploads/test/

# 日志配置
LOG_DIR=logs/test

# 测试特定配置
TEST_TIMEOUT=5000
MOCHA_OPTS=--exit
COVERAGE_ENABLED=true
SKIP_AUTH_IN_TEST=true             # 在测试中可选择性跳过认证
MOCK_EXTERNAL_SERVICES=true        # 模拟外部服务 