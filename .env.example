# 应用配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# JWT配置
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d

# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=myapp
MYSQL_POOL_SIZE=10

# Oracle配置
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_USER=system
ORACLE_PASSWORD=password
ORACLE_SID=XE
ORACLE_POOL_SIZE=10

# PostgreSQL配置
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=password
PG_DATABASE=myapp
PG_POOL_SIZE=10

# 达梦配置
DM_HOST=localhost
DM_PORT=5236
DM_USER=SYSDBA
DM_PASSWORD=password
DM_DATABASE=myapp
DM_POOL_SIZE=10

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs

# 限流配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# 消息队列配置
MQ_HOST=localhost
MQ_PORT=5672
MQ_USER=guest
MQ_PASSWORD=guest 