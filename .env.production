# 生产环境配置
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1
LOG_LEVEL=error
ENABLE_SWAGGER=false

# JWT配置 - 生产环境必须更改为强密钥
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=12h

# MySQL配置 - 生产环境
MYSQL_HOST=db.example.com
MYSQL_PORT=3306
MYSQL_USER=db_user
MYSQL_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
MYSQL_DATABASE=webserver_prod
MYSQL_POOL_MIN=10
MYSQL_POOL_MAX=50
MYSQL_SSL=true

# Redis配置 - 生产环境
REDIS_HOST=redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
REDIS_DB=0
REDIS_PREFIX=webserver:
REDIS_TLS=true

# 安全配置 - 生产环境安全设置
RATE_LIMIT_WINDOW_MS=900000        # 15分钟
RATE_LIMIT_MAX=100                 # 限制请求次数
CORS_ORIGIN=https://yourapp.com    # 严格限制允许的域名
CORS_METHODS=GET,POST,PUT,DELETE
HELMET_HSTS_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=true

# 集群配置 - 生产环境应启用集群模式
CLUSTER_ENABLED=true
CLUSTER_WORKERS=0                  # 使用CPU核心数

# 文件上传配置
UPLOAD_MAX_SIZE=10
UPLOAD_PATH=/data/uploads/

# 日志配置
LOG_DIR=/var/log/webserver
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10

# 性能监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 生产环境邮件配置
MAIL_HOST=smtp.company.com
MAIL_PORT=587
MAIL_USER=noreply@company.com
MAIL_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
MAIL_FROM=noreply@company.com
MAIL_SECURE=true

# 负载均衡和高可用配置
BEHIND_PROXY=true
TRUST_PROXY=true 